- content_for :page_title do
  = t('.edit_profile')

= form_tag profile_path, :method => :put, :multipart => true, :id => 'update_profile_form' do
  = render 'profiles/edit_public', :profile => profile, :aspect => aspect, :person => person


  %fieldset
    %legend
      = t('profiles.edit.your_private_profile')

    .clearfix
      = label_tag 'profile[bio]', t('profiles.edit.your_bio')
      .input
        = text_area_tag 'profile[bio]', profile.bio

    .clearfix
      = label_tag 'profile[location]', t('profiles.edit.your_location')
      .input
        = text_field_tag 'profile[location]', profile.location

    .clearfix
      = label_tag 'profile[gender]', t('profiles.edit.your_gender')
      .input
        = text_field_tag 'profile[gender]', profile.gender

    .clearfix
      = label_tag :birthday, t('profiles.edit.your_birthday')
      .input
        = select_date profile.birthday, :prompt => true,
          :default => true, :order => t('date.order'), :start_year => 2000, :end_year => 1930, :prefix => 'profile[date]'

    .clearfix

      = label_tag 'profile[searchable]', "Search"
      .input
        = check_box_tag 'profile[searchable]', true, profile.searchable
        %span
          = t('profiles.edit.allow_search')

  .submit_block
    =yield(:submit_block)

