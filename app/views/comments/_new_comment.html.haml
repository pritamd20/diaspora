= form_tag( post_comments_path(post_id), :id => "new_comment_on_#{post_id}", :class => 'new_comment', :remote => true) do
  = person_image_tag(current_user)
  %fieldset
    = text_area_tag :text, nil, :rows => 2, :class => "comment_box",:id => "comment_text_on_#{post_id}", :prefill => t('.comment')
    = submit_tag t('.comment'), :id => "comment_submit_#{post_id}", :class => "comment_submit btn primary", :disable_with => t('.commenting')

